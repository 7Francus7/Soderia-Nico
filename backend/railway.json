{
       "$schema": "https://railway.app/railway.schema.json",
       "build": {
              "builder": "DOCKERFILE",
              "dockerfilePath": "Dockerfile"
       },
       "deploy": {
              "startCommand": "sh -c \"python -c 'from app.database import create_db_and_tables; create_db_and_tables()' && uvicorn app.main:app --host 0.0.0.0 --port $PORT\"",
              "healthcheckPath": "/health",
              "healthcheckTimeout": 30,
              "restartPolicyType": "ON_FAILURE",
              "restartPolicyMaxRetries": 3
       }
}